AS 5e Celsius Temperature Table

#include<iostream>

#include<iomanip>

using namespace std;

float celcius(float f )

{

    return (5*(f -32))/9;

}

int main()

{

   cout<<fixed<<setprecision(2)<<endl;

   cout<<"Fahrenheit \t\t Ceiclius"<<endl;

   cout<<"---------------------------------"<<endl;

  

   for(int f = 0;f<=20;f++)

    {

        cout <<setw(3)<< f << "           "<<setw(3)

                                   << fixed << setprecision(1)  

                                   << celcius(f)<< endl;

    }

  

}

 


AS 5d Coin Toss

#include <iostream>

#include <cstdlib>

#include <ctime>  

using namespace std;

 

int coinToss()

{

    int change = (rand()%2)+1;       

                  if (change == 1)

                                                     cout << "Heads!.\n";

                                   else

                                                     cout << "Tails!.\n"; 

                                   return change;

}

int main()

{

    srand(time(0));

 

                  int toss;                 

                  cout << "How many tosses should I make?" << endl;                           

                  cin >> toss;

                  for(int num = 0;num<toss;num++)

                  {               

                                   coinToss();           

                  }

 

return 0;                                                                   

}

 


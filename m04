AS 5b Falling Distance

 

#include <iostream>

#include <iomanip>

using namespace std;

double fallingDistance(int t)

{

                  const double g = 9.8;

                  return .5 * g * t * t;

}

 

int main()

{

                  cout<< "    Time        Distance\n"

                       << "---------------------------\n";

 

                  for(int t = 1; t <= 10; t++)

                  {

                                   cout <<setw(4)<< t << "           "<<setw(4)

                                    << fixed << setprecision(2)  

                                    << fallingDistance(t) << endl;

                  }

 

                  return 0;

}


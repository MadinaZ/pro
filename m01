Press ENTER to exit console. 

 

AS 2d Math Tutor

 

#include<iostream>

#include<cstdlib>

#include<ctime>

#include<iomanip>

using namespace std;

int main()

{

    int a, b, result;

    srand(time(0));

    a = rand()%(1000);

    b = rand()%(1000);

    cout<<setw(4)<<a<<endl;

    cout<<"+";

    cout<<setw(3)<<b<<endl;

    cout<<"Press Enter to see the answer . . .\n";

    cin.ignore();

    result = a + b;

    cout<<result<<endl;

    return 0;

}

TEST RUN

 146                                                                          

+715                                                                          

Press Enter to see the answer . . .                                           

                                                                              

861                                                                           

                                                                              

                                                                              

